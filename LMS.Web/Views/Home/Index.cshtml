<h2>Library Management System</h2>

<div data-bind="visible:books()" style="display:none">

    <table>
        <tr>
            <td>Title:</td>
            <td><input type="text" data-bind="value: title"></td>
        </tr>
        <tr>
            <td>ISBNCode:</td>
            <td><input type="text" data-bind="value: isbn"></td>
        </tr>
        <tr>
            <td>Author:</td>
            <td><input type="text" data-bind="value: author"></td>
        </tr>
        <tr>
            <td><input type="button" value="Search" id="btnSearch" data-bind="click: loadBooks"></td>
        </tr>
    </table>

    <br />
    <br />

    <table border="1">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    ISBNCode
                </th>
                <th>
                    Author
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody data-bind="foreach: books">
            <tr>
                <td data-bind="text: title"></td>
                <td data-bind="text: isbnCode"> </td>
                <td data-bind="text: author"></td>
                <td><input type="button" value="View" id="btnView" data-bind="click: function(){ $parent.GetBookDetails(bookId)}"> </td>
            </tr>
        </tbody>
    </table>
</div>
<div data-bind="visible:bookDetails()" style="display:none">
    @{Html.RenderPartial("~/Views/Home/BookDetails.cshtml");}
</div>

@section scripts{
    <script src="~/Scripts/knockout-2.2.0.js"></script>
    @Scripts.Render("~/bundles/Lms")
}